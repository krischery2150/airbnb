<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <%= link_to "Sign In with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %><br> <br>
      <%= link_to "Sign In with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary" %>
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render 'shared/devisemes' %>
        <div class="form-group text-left">
          <label>Email</label><br  />
          <%= f.email_field :email, :class => 'form-control', autofocus: true %>
        </div>

        <div class="form-group">
          <label>Password</label><br  />
          <%= f.password_field :password, :class => 'form-control' , autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me, :class => 'form-group' %>
            <%= f.label :remember_me, :class => 'form-group' %>
          </div>
        <% end -%>

        <div class="form-group text-right">
          <%= f.submit "Log in", :class => 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
      <div class="form-group text-right">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
